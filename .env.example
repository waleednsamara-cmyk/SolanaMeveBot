# Solana Network Configuration
# Option 1: Free public RPC (may have rate limits / network restrictions in Replit)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Option 2: Helius (RECOMMENDED) - Free tier: 500K credits/month
# Sign up at https://www.helius.dev/ and replace YOUR_API_KEY
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
# SOLANA_WS_URL=wss://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Option 3: QuickNode - Free tier: 10M credits/month
# Sign up at https://www.quicknode.com/ and replace YOUR_ENDPOINT
# SOLANA_RPC_URL=https://your-endpoint.solana-mainnet.quiknode.pro/YOUR_KEY/
# SOLANA_WS_URL=wss://your-endpoint.solana-mainnet.quiknode.pro/YOUR_KEY/

# Wallet Configuration (NEVER commit your actual private key!)
WALLET_PRIVATE_KEY=your_base58_private_key_here

# Trading Configuration
# ⚠️  IMPORTANT: Set to 'true' to enable REAL trade execution (uses real money!)
# Leave as 'false' for safe simulation mode
EXECUTE_TRADES=false

# Minimum profit required to execute a trade (in SOL)
MIN_PROFIT_SOL=0.005

# Maximum size per trade (in SOL) - protects against large losses
MAX_TRADE_SIZE_SOL=0.1

# Maximum slippage tolerance (in basis points, 100 = 1%)
MAX_SLIPPAGE_BPS=100

# Priority fee for transactions (in lamports)
PRIORITY_FEE_LAMPORTS=10000
